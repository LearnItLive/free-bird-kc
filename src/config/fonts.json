{
  "fontFamily": [
    {
      "name": "Inter",
      "src": [
        { "weight": "400" },
        { "weight": "600" },
        { "weight": "700" }
      ],
      "preload": true,
      "provider": "google-fonts",
      "display": "swap",
      "cssVariable": "font-primary",
      "fallback": "system-ui, sans-serif",
      "locallyHosted": true
    },
    {
      "name": "Atkinson Hyperlegible",
      "src": [
        { "path": "/public/fonts/atkinson-regular.woff", "style": "normal", "weight": "400" },
        { "path": "/public/fonts/atkinson-bold.woff", "style": "normal", "weight": "700" }
      ],
      "preload": true,
      "display": "swap",
      "cssVariable": "font-secondary",
      "provider": "local-hosted",
      "fallback": "system-ui, sans-serif",
      "locallyHosted": true
    }
  ]
}
